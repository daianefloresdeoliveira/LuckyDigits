<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LuckyDigits.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <Image Source="logosub.png" WidthRequest="74" HeightRequest="115"  />
            <Label 
                x:Name="AppName"
                Margin="0, 20, 0, 120"
                HorizontalOptions="Center"
                TextColor="#00AB37" 
                Text="Lucky Number"
                VerticalOptions="Center" />

            <VerticalStackLayout x:Name="ContainerLuckyNumbers" IsVisible="False">
                <Label TextColor="#00AB37" Text="Lycky number is: " HorizontalOptions="Center" Margin="0, 20, 0, 0" />
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" Margin="0,70">
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber01" Text=""  TextColor="#00AB37"/>
                    </Border>
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber02" Text=""  TextColor="#00AB37"/>
                    </Border>
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber03" Text=""  TextColor="#00AB37"/>
                    </Border>
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber04" Text=""  TextColor="#00AB37"/>
                    </Border>
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber05" Text=""  TextColor="#00AB37"/>
                    </Border>
                    <Border Stroke="#00AB37" Padding="10, 5" StrokeShape="RoundRectangle 8">
                        <Label FontSize="24" x:Name="LuckNumber06" Text=""  TextColor="#00AB37"/>
                    </Border>
                </HorizontalStackLayout>
                <Label Text="Good Luck!" TextColor="#00AB37" HorizontalOptions="Center" Margin="0, 0, 0, 50" />
            </VerticalStackLayout>
            <Button Clicked="onGenerateLuckyNumbers" Text="Generate lucky number" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>